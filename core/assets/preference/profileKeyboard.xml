<!--
Default Profile for Keyboard
131: ESCAPE
62: SPACE
129: CONTROL LEFT
59: SHIFT_LEFT
51: W
47: S
29: A
32: D
19: UP ARROW // up and down does not work on my config
20: DOWM ARROW

-->
<InputProfile>
	<type name = "Keyboard"/>
	<states>
		<state name="Up">
			<key code="51" />
		</state>
		<state name="Down">
			<key code="47" />
		</state>
		<state name="Left">
			<key code="29" />
		</state>
		<state name="Right">
			<key code="32" />
		</state>
	</states>

	<contexts>
		<context name="Menu" >
			<states>
				<state name="Select">
					<key code="62" />
				</state>

				<state name="Back">
					<key code="131" />
				</state>

				<state name="Start">
					<key code="62" />
				</state>
				<state name="Previous">
					<key code="19" />
				</state>

				<state name="Next">
					<key code="20" />
				</state>
			</states>
		</context>

		<context name="Game" >
			<states>
				<state name="Jump">
					<key code="62" />
				</state>

				<state name="LongAttack1">
					<mouse code="0" />
				</state>

				<state name="ShortAttack">
					<mouse code="1" />
				</state>

				<state name="LongAttack2">
					<key code="129" />
				</state>

				<state name="PickUp">
					<key code="59" />
				</state>

				<state name="Start">
				<key code="131" />
				</state>
			</states>
		</context>
	</contexts>
</InputProfile>
